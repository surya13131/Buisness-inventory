{
  "firestore": {
    "database": "(default)",
    "location": "asia-south1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },

  "functions": [
    {
      "source": "functions",
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run build"]
    }
  ],

  "hosting": {
    "public": "react-ui/build",
    "rewrites": [
      {
        "source": "/api/**",
        "run": {
          "serviceId": "api",
          "region": "asia-south1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
